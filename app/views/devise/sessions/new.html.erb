<div class="card card-main">

  <h2 class="text-center fw-bold mb-4">Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="input-group">
      <i class="input-group-text fa-at my-1 label-with-format fw-bold"></i> 
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control my-1 field-with-format" %>
    </div>


    <div class="input-group">
      <i class="input-group-text fa-solid fa-lock my-1 label-with-format fw-bold"></i> 
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control my-1 field-with-format" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

  <div class="container-fluid text-center m-2 p-4"> 
    <button type="submit" class="btn btn-primary px-4">
      <span class="px-4 fw-bold">SIGN IN</span>
    </button>
  </div>

  <% end %>

  <%= render "devise/shared/links" %>
</div>